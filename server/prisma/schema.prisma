// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  email  String @unique
  password String
  nickname String
  img  String?
  intro String?
  recipes Recipe[]
}

model Recipe {
  id Int @default(autoincrement()) @id
  title String
  user   User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int 
  contents Content[]
}

model Content{
   id Int @default(autoincrement()) @id
   img String
   explain String
   recipe Recipe? @relation(fields: [recipeId],references: [id], onDelete: Cascade)
   recipeId Int
}


model Metarial {
  id Int @default(autoincrement()) @id
  name String
  img String
}